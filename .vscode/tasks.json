{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[Tests] PHPUnit",
            "type": "shell",
            "command": "./vendor/bin/phpunit",
            "problemMatcher": []
        },
        {
            "label": "[Tests] PHPUnit (coverage-html)",
            "type": "shell",
            "command": "./vendor/bin/phpunit --coverage-html tests/coverage",
            "problemMatcher": []
        },
        {
            "label": "[CS] PHP CS Fixer",
            "type": "shell",
            "command": "./vendor/bin/php-cs-fixer fix -v",
            "problemMatcher": []
        },
        {
            "label": "[CS] PHP Compatibility",
            "type": "shell",
            "command": "./vendor/bin/phpcs -p . --extensions=php --ignore=*/vendor/* --standard=PHPCompatibility --runtime-set testVersion 7.2-",
            "problemMatcher": []
        }
    ]
}
